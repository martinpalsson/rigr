{
  "name": "precept",
  "displayName": "Precept",
  "description": "Lightweight requirements management for VS Code - IntelliSense, validation, traceability, and documentation for RST files",
  "version": "0.1.0",
  "icon": "icon.png",
  "publisher": "precept",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "requirements",
    "traceability",
    "digital-thread",
    "systems-engineering",
    "rst",
    "reStructuredText"
  ],
  "activationEvents": [
    "onLanguage:restructuredtext",
    "workspaceContains:**/*.rst",
    "workspaceContains:**/precept.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "requirements.reloadConfiguration",
        "title": "Precept: Reload Configuration"
      },
      {
        "command": "requirements.deepValidation",
        "title": "Precept: Deep Validation"
      },
      {
        "command": "requirements.tagBaseline",
        "title": "Precept: Tag Current Baseline"
      },
      {
        "command": "requirements.removeBaselineTags",
        "title": "Precept: Remove Baseline Tags"
      },
      {
        "command": "requirements.generateReport",
        "title": "Precept: Generate Release Report"
      },
      {
        "command": "requirements.createGitTag",
        "title": "Precept: Create Git Tag for Baseline"
      },
      {
        "command": "requirements.refreshTreeView",
        "title": "Precept: Refresh Explorer"
      },
      {
        "command": "requirements.refreshRelationshipExplorer",
        "title": "Precept: Refresh Link Explorer"
      },
      {
        "command": "requirements.showRelationships",
        "title": "Precept: Show Relationships"
      },
      {
        "command": "requirements.createProject",
        "title": "Precept: New RMS Project"
      },
      {
        "command": "requirements.buildDocumentation",
        "title": "Precept: Build Documentation"
      },
      {
        "command": "requirements.viewDocumentation",
        "title": "Precept: View Documentation"
      },
      {
        "command": "requirements.openPreview",
        "title": "Precept: Open RST Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "requirements.changeGroupBy",
        "title": "Precept: Group By...",
        "icon": "$(group-by-ref-type)"
      }
    ],
    "configuration": {
      "title": "Requirements",
      "properties": {
        "requirements.validation.automatic": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic validation"
        },
        "requirements.validation.onSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate on file save"
        },
        "requirements.validation.debounceMs": {
          "type": "number",
          "default": 500,
          "description": "Debounce time for validation in milliseconds"
        },
        "requirements.validation.checkCircularDeps": {
          "type": "boolean",
          "default": false,
          "description": "Check for circular dependencies during automatic validation"
        },
        "requirements.validation.checkCoverage": {
          "type": "boolean",
          "default": false,
          "description": "Check coverage during automatic validation"
        },
        "requirements.treeView.groupBy": {
          "type": "string",
          "enum": [
            "type",
            "level",
            "file",
            "status"
          ],
          "default": "type",
          "description": "Group requirements in tree view by"
        },
        "requirements.treeView.showStatusIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show status icons in tree view"
        },
        "requirements.indexing.maxFiles": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of files to index"
        },
        "requirements.indexing.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/build/**",
            "**/_build/**"
          ],
          "description": "Glob patterns to exclude from indexing"
        },
        "requirements.config.overrideConfig": {
          "type": "boolean",
          "default": false,
          "description": "Override configuration from precept.json with custom settings"
        },
        "requirements.config.customTypes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "directive": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "prefix": {
                "type": "string"
              },
              "color": {
                "type": "string"
              },
              "style": {
                "type": "string"
              }
            },
            "required": [
              "directive",
              "title",
              "prefix"
            ]
          },
          "default": [],
          "description": "Custom requirement types (only used if overrideConfig is true)"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "requirementsExplorer",
          "name": "Item Explorer"
        },
        {
          "id": "relationshipExplorer",
          "name": "Link Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "requirementsExplorer",
        "contents": "No requirements found.\n[Reload Configuration](command:requirements.reloadConfiguration)"
      },
      {
        "view": "relationshipExplorer",
        "contents": "Select an item in the Item Explorer to view its links."
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "requirements.openPreview",
          "when": "resourceLangId == restructuredtext",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "requirements.changeGroupBy",
          "when": "view == requirementsExplorer",
          "group": "navigation"
        },
        {
          "command": "requirements.refreshTreeView",
          "when": "view == requirementsExplorer",
          "group": "navigation"
        },
        {
          "command": "requirements.refreshRelationshipExplorer",
          "when": "view == relationshipExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "requirements.tagBaseline",
          "when": "view == requirementsExplorer && viewItem == requirement"
        },
        {
          "command": "requirements.showRelationships",
          "when": "view == requirementsExplorer && viewItem == requirement"
        }
      ]
    },
    "languages": [
      {
        "id": "restructuredtext",
        "aliases": [
          "reStructuredText",
          "RST"
        ],
        "extensions": [
          ".rst",
          ".rest"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "restructuredtext",
        "path": "./snippets/requirements.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martinpalsson/precept"
  },
  "license": "MIT",
  "dependencies": {
    "highlight.js": "^11.11.1"
  }
}
